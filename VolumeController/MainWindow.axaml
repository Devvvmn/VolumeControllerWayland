<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VolumeController.MainWindow"
        Title="Volume Controller"
        Width="300" Height="50"
        Topmost="True"            
        Background="Transparent"
        CanResize="False"
        >    
    <StackPanel>
        <Slider x:Name="Slider" Minimum="0" Maximum="100" Value="50" Width="200" />
    </StackPanel>
</Window>